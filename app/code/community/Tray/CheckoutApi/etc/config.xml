<config>
    <modules>
        <Tray_CheckoutApi>
            <version>0.2.0</version>
        </Tray_CheckoutApi>
    </modules>
    <global>
        <models>
            <checkoutapi>
                <class>Tray_CheckoutApi_Model</class>
                <resourceModel>checkoutapi_mysql4</resourceModel>
            </checkoutapi>
            <checkoutapi_mysql4>
                <class>Tray_CheckoutApi_Model_Mysql4</class>
                <entities>
                    <api_debug>
                        <table>checkoutapi_api_debug</table>
                    </api_debug>
                </entities>
            </checkoutapi_mysql4>
        </models>
        <resources>
            <checkoutapi_setup>
                <setup>
                    <module>Tray_CheckoutApi</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </checkoutapi_setup>
            <checkoutapi_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </checkoutapi_write>
            <checkoutapi_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </checkoutapi_read>
        </resources>
	<blocks>
            <checkoutapi>
                <class>Tray_CheckoutApi_Block</class>
            </checkoutapi>
        </blocks>
	<helpers>
            <checkoutapi>
                <class>Tray_CheckoutApi_Helper</class>
            </checkoutapi>
	</helpers>
        <events>
            <checkout_onepage_controller_success_action>
                <observers>
                    <checkoutapi_observer>
                        <type>singleton</type>
                        <class>checkoutapi/observer</class>
                        <method>sendEmailFrontend</method>
                    </checkoutapi_observer>
                </observers>
            </checkout_onepage_controller_success_action>
            <checkout_multishipping_controller_success_action>
                <observers>
                    <checkoutapi_observer>
                        <type>singleton</type>
                        <class>checkoutapi/observer</class>
                        <method>sendEmailFrontend</method>
                    </checkoutapi_observer>
                </observers>
            </checkout_multishipping_controller_success_action>
        </events>
        <fieldsets>
             <sales_convert_quote_payment>
                <traycheckout_transaction_id>
                    <to_order_payment>*</to_order_payment>
                </traycheckout_transaction_id>
                <traycheckout_split_number>
                    <to_order_payment>*</to_order_payment>
                </traycheckout_split_number>
                <traycheckout_split_value>
                    <to_order_payment>*</to_order_payment>
                </traycheckout_split_value>
                <traycheckout_token_transaction>
                    <to_order_payment>*</to_order_payment>
                </traycheckout_token_transaction>
                <traycheckout_url_payment>
                    <to_order_payment>*</to_order_payment>
                </traycheckout_url_payment>
                <traycheckout_typeful_line>
                    <to_order_payment>*</to_order_payment>
                </traycheckout_typeful_line>
             </sales_convert_quote_payment>
        </fieldsets>
    </global>
    <frontend>
        <secure_url>
            <checkoutapi>/checkoutapi/standard</checkoutapi>
        </secure_url>   
        <routers>
            <checkoutapi>
                <use>standard</use>
                <args>
                    <module>Tray_CheckoutApi</module>
                    <frontName>checkoutapi</frontName>
                </args>
            </checkoutapi>
        </routers>
        <translate>
            <modules>
                <checkoutapi>
                    <files>
                        <default>Tray_CheckoutApi.csv</default>
                    </files>
                </checkoutapi>
            </modules>
        </translate>
        <layout>
            <updates>
                <traycheckoutapi>
                    <file>tray_checkoutapi.xml</file>
                </traycheckoutapi>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <checkoutapi>
                    <files>
                        <default>Tray_CheckoutApi.csv</default>
                    </files>
                </checkoutapi>
            </modules>
        </translate>        
        <layout>
            <updates>
                <traycheckoutapi>
                    <file>tray_checkoutapi.xml</file>
                </traycheckoutapi>
            </updates>
        </layout>        
    </adminhtml>
    <default>
        <payment>
            <traycheckoutapi>
                  <active>0</active>
                  <model>Tray_CheckoutApi_Model_Standard</model>
                  <order_status>pending</order_status>
                  <title>TrayCheckout</title>
                  <allowspecific>1</allowspecific>
                  <splitTax>1.99</splitTax>
                  <retorno>http://www.urldoseusite.com.br/index.php/CheckoutApi_Standard/standard/success/</retorno>
            </traycheckoutapi>
        </payment>
        <checkoutapi>
            <settings>
                <exibitionmodal>1</exibitionmodal>
            </settings>
        </checkoutapi>
    </default>
</config>